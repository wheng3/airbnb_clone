<div class="container">
	<h1>Your Listings</h1>
	<hr>
	<% if @listings.count<= 0 %>
		<h4>You don’t have any listings!</h4>
		<p>Make money by renting out your extra space on Airbnb. You’ll also get to meet interesting travelers from around the world!</p>
	<% else %>
		<table class="table table-hover">
		  <thead>
		    <tr>
		      <th>#</th>
		      <th>Name</th>
		      <th>Bed Number</th>
		      <th>Guest Number</th>
		      <th>Address</th>
		      <th>Price</th>
		      <th>Posted on</th>
		      <th></th>

		    </tr>
		  </thead>
		  
		  <tbody>
		  	<% i = 1 %>
		  	<% @listings.each do |listing| %>
			    <tr>
			      <th scope="row"><%= i %></th>
			      <td><%= listing.name %></td>
			      <td><%= listing.bed_number %></td>
			      <td><%= listing.guest_number %></td>
			      <td><%= listing.address %></td>
			      <td><%= listing.price %></td>
			      <td><%= listing.created_at %></td>
			      <td>
			      	<div class="edit_listing_options">
					    <%= link_to edit_user_listing_path(id: listing.id, user_id: current_user.id), class: "btn btn-primary a-btn-slide-text" do%>
					    	Edit
					    	<span class="fa fa-pencil-square" aria-hidden="true"></span>
					    <% end %>
					    <%= link_to user_listing_path(id: listing.id, user_id: current_user.id), class: "btn btn-primary a-btn-slide-text" do%>
					    	View
					    	<span class="fa fa-eye" aria-hidden="true"></span>
					    <% end %>
					    <%= link_to user_listing_path(id: listing.id, user_id: current_user.id), method: :delete, data:{confirm: "Are you sure you want to delete this listing?"}, class: "btn btn-primary a-btn-slide-text" do%>
					    	Delete
					    	<span class="fa fa-trash" aria-hidden="true"></span>
					    <% end %>
				    </div>
				</td>
				<% i += 1 %>
			  </tr>
		    <% end %>
		  </tbody>
		</table>
	<% end %>
</div>